<h1>Customers</h1>
<%= link_to (image_tag "customer.png", class: "myIcon") + ' New Customer' , new_customer_path, :class => "btn btn-primary" %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Customer ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Company</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Postal Code</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.CustomerId %></td>
        <td><%= customer.FirstName %></td>
        <td><%= customer.LastName %></td>
        <td><%= customer.Company %></td>
        <td><%= customer.Address %></td>
        <td><%= customer.City %></td>
        <td><%= customer.State %></td>
        <td><%= customer.Country %></td>
        <td><%= customer.PostalCode %></td>
        <td><%= customer.Phone %></td>
        <td><%= customer.Fax %></td>
        <td><%= customer.Email %></td>
        <td><%= link_to (image_tag "show.png", class: "myIcon"), customer, :class => "btn btn-success" %></td>
        <td><%= link_to (image_tag "edit.png", class: "myIcon"), edit_customer_path(customer), :class => "btn btn-warning" %></td>
        <td><%= link_to (image_tag "delete.png", class: "myIcon"), customer, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @customers %>

<br>

<p id="notice"><%= notice %></p>


